    text <117>
      text <Þar svá at gerðu gyrðan>
      text <golfhölkvis sá fylkis>
      text <segls naglfara siglur>
      text <saums andvanar standa;>
      text <urðu snemmst ok sörli>
      text <samráða þeir Hamðir>
      text <hörðum herðimýlum>
      text <Hergauts vinu barðir.>
    text <118>
      text <Mjök lét stála stökkvir>
      text <styðja Gjúka niðja>
      text <flaums, þá er fjörvi næma>
      text <Foglhildar mun vildu,>
      text <ok bláserkjar birkis,>
